	@Override
	public Producto save(Producto producto) {
		// TODO Auto-generated method stub
		return null;
	}
	
	//CLASE69
	@Override
	public Producto update(Producto producto, Long id) {
		// TODO Auto-generated method stub
		return null;
	}

	//CLASE69
	@Override
	public void delete(Long id) {
		// TODO Auto-generated method stub
		
	}
	

	@Autowired
	private ProductoClienteRestFeign clienteFeign;

	
}
